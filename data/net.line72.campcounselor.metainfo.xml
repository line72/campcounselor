<component type="desktop-application">
  <id>net.line72.campcounselor</id>
  
  <name>Camp Counselor</name>
  <summary>Bandcamp.com Wishlist Manager</summary>
  
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <content_rating type="oars-1.1" />

  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translatable="no">Marcus Dillavou</developer_name>
  <developer id="line72.net">
    <name translatable="no">Marcus Dillavou</name>
  </developer>
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  
  <description>
    <p>
      Camp Counselor help you manage your bandcamp.com wishlist.
    </p>
    <p>
      Camp Counselor automatically fetches your bandcamp.com wishlist (and purchases) and allows you to comment, rate, and organize your wishlist.
    </p>
  </description>

  <url type="homepage">https://line72.net/software/camp-counselor</url>
  <launchable type="desktop-id">net.line72.campcounselor.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://line72.net/software/camp-counselor/images/campcounselor1.png</image>
      <caption>Album View of Wish List</caption>
    </screenshot>
    <screenshot>
      <image>https://line72.net/software/camp-counselor/images/campcounselor3.png</image>
      <caption>About Page</caption>
    </screenshot>
  </screenshots>

