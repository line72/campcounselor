<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adwaita" version="1.0"/>

  <template class="CampCounselorMediaBar" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="hexpand">True</property>
    <property name="vexpand">False</property>

    <!-- Add elements like in your original layout -->
    <child>
      <object class="GtkActionBar" id="action-bar">
        <!-- Action Bar has horizontal orientation -->
        <property name="revealed">false</property>
        
        
        <!-- Left side of the action bar with cover art and play/pause button -->
        <child>
          <object class="AdwClamp">
            <!-- Set max width for the clamp -->
            <property name="maximum-size">600</property>

            <!-- Box within the clamp -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                
                <child>
                  <object class="GtkBox">
                    <!-- Horizontal box for arranging cover art and play/pause button -->
                    <property name="orientation">horizontal</property>
                    
                    <!-- Cover Art -->
                    <child>
                      <object class="GtkImage" id="cover-art">
                        <property name="width-request">40</property>
                        <property name="height-request">40</property>
                        <property name="visible">true</property>
                        <!-- Optional: Set an image source if needed -->
                      </object>
                    </child>

                    <!-- Play/Pause Button -->
                    <child>
                      <object class="GtkToggleButton" id="play-pause-button">
                        <property name="visible">true</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">media-playback-start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Middle section for song status and progress bar -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="hexpand">True</property>

                    <!-- Song Status (Title and Play Position/Duration) -->
                    <child>
                      <object class="GtkLabel" id="song-status">
                        <property name="visible">true</property>
                        <property name="label">Song Title - 0:00 / 0:00</property>
                      </object>
                    </child>

                    <!-- Progress Bar -->
                    <child>
                      <object class="GtkScale" id="song-progress-bar">
                        <property name="visible">true</property>
                        <property name="orientation">horizontal</property>
                        <property name="draw-value">false</property>
                        <property name="sensitive">true</property>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Right side for skip back and skip next buttons -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>

                    <!-- Skip Back Button -->
                    <child>
                      <object class="GtkButton" id="skip-back-button">
                        <property name="visible">true</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">media-skip-backward</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Skip Next Button -->
                    <child>
                      <object class="GtkButton" id="skip-next-button">
                        <property name="visible">true</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">media-skip-forward</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
